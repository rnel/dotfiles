[user]
	name = Arnel Aguinaldo
	email = arnel.aguinaldo@rga.com
[color]
	ui = auto
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[core]
	excludesfile = ~/.gitignore
	editor = mate -wl1
	autocrlf = input
	safecrlf = true
[diff]
	tool = opendiff
[difftool]
  prompt = false
[merge]
	tool = opendiff
[push]
	default = simple